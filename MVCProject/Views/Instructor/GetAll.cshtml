@using DataAccessLayer.Models
@model List<Instructor>

<h1 class="text-center">All Instructors</h1>

<a asp-action="Add" asp-controller="Instructor" class="btn btn-primary btn-lg " style="width: 25%;">Add Instructor</a>
<br />
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Age</th>
        <th>Salary</th>
        <th>Address</th>
        <th>Image</th>
        <th>Hiring Date</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td scope="row">@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Age</td>
            <td>@item.Salary</td>
            <td>@item.Address</td>
            <td><img src="/Images/@item.ImageUrl" width="50px" /></td>
            <td>@item.HiringDate</td>
            <td>
                <a asp-action="GetById" asp-controller="Instructor" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                <a asp-action="Edit" asp-controller="Instructor" asp-route-id="@item.Id" class="btn btn-warning">Update Instructor</a>
                <a asp-action="Delete" asp-controller="Instructor" asp-route-id="@item.Id" class="btn btn-danger">Delete Instructor</a>
            </td>
        </tr>
    }
</table>
