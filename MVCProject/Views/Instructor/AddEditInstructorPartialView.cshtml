@using DataAccessLayer.Models
@model Instructor
@{
    ViewData["Title"] = "Edit";
    SelectList deptList = new SelectList(ViewBag.Departments, "Id", "Name");
}


<div class="mb-3">
    <label class="form-label" asp-for="Name"></label>
    <input asp-for="Name" class="form-control">
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="mb-3">
    <label class="form-label" asp-for="Age"></label>
    <input asp-for="Age" class="form-control">
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div class="mb-3">
    <label class="form-label" asp-for="Salary"></label>
    <input asp-for="Salary" class="form-control">
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>
<div class="mb-3">
    <label class="form-label" asp-for="Address"></label>
    <input asp-for="Address" class="form-control">
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="mb-3">
    <label class="form-label" asp-for="ImageUrl"></label>
    <input asp-for="ImageUrl" class="form-control">
    <span asp-validation-for="ImageUrl" class="text-danger"></span>
</div>
<div class="mb-3">
    <label class="form-label" asp-for="HiringDate"></label>
    <input asp-for="HiringDate" class="form-control">
    <span asp-validation-for="HiringDate" class="text-danger"></span>
</div>
<div class="mb-3">
    <label class="form-label">DepartmentNo.</label>
    <select class="form-control" asp-items="deptList" asp-for="DepartmentId">
    </select>
    <span asp-validation-for="DepartmentId" class="text-danger"></span>
</div>