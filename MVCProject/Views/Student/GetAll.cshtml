@using DataAccessLayer.Models
@model List<Student>

<h1 class="text-center">All Students</h1>
@if(User.IsInRole("Admin"))
{
    <a href="/Student/Add" class="btn btn-primary btn-lg " style="width: 25%;">Add Student</a>
}

<br />
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Age</th>
        <th>Address</th>
        <th>Email</th>
        <th>Image</th>
        <th>Department</th>
        <th>Actions</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td scope="row">@item.SSN</td>
            <td>@item.Name</td>
            <td>@item.Age</td>
            <td>@item.Address</td>
            <td>@item.Email</td>
            <td><img src="/Images/@item.ImageURL" width="60px"/></td>
            <td>@item.Department?.Name</td>
            <td>
                <a asp-action="GetById" asp-controller="Student" asp-route-id="@item.SSN" class="btn btn-info">Details</a>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Edit" asp-controller="Student" asp-route-id="@item.SSN" class="btn btn-warning">Update Student</a>
                    <a asp-action="Delete" asp-controller="Student" asp-route-id="@item.SSN" class="btn btn-danger">Delete Student</a>
                }
               
            </td>
        </tr>
    }
</table>


